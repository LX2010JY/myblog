                    ]


                });
                $("#editor").val(editor.sync());
                function sendblog() {
                    var _id = $("#_id").val();
                    var title = $("#title").val();
                    var content = editor.getValue();
                    if(!title||!content) {
                        alert("请完善信息先～～～");
                        return;
                    }
                    var data = {
                        '_id': _id,
                        'title': title,
                        'content': content
                    };
                    $.post('/artical/add', data, function (dat) {
                        if (dat.success == 1) {
                            window.location.href = dat.url;
                        } else {
                            alert('错误，再试试吧');
                        }
                    });

                }
